<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Roles</th>
            <th>Image</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Users)
        {
            <tr>
                
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.RoleName</td>
                <td>
                    <img src="~/Images/@user.UserImage" alt="User Image" width="50" height="50" />
                </td>
                <td>
                    <a asp-controller="Permissions"
                       asp-action="Index"
                       asp-route-roleId="@user.RoleId"
                       class="btn btn-sm btn-primary">
                        View Permissions
                    </a>
            </tr>
        }
    </tbody>
</table>
